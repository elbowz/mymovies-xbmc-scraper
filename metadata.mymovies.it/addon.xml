<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.mymovies.it"
       name="MyMovies.it"
       version="1.1.0"
       provider-name="muttley">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="it"
             library="mymovies.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="it">MyMovies.it Film Scraper</summary>
    <summary lang="en">MyMovies.it Movie Scraper</summary>
    <summary lang="hu">MyMovies.it Film scraper</summary> 
    <summary lang="kr">MyMovies.it 영화 스크래퍼</summary>
    <summary lang="pt">Scraper de filmes MyMovies.it</summary>
    <description lang="it">Riporta problemi o suggerimenti su: https://code.google.com/p/mymovies-xbmc-scraper/issues/list o http://forum.xbmc.org/showthread.php?t=58141</description>
    <description lang="en">Download Movie information from www.mymovies.it</description>
    <description lang="hu">Film információk letöltése a www.mymovies.it webhelyről</description>
    <description lang="kr">MyMovies.it 에서 영화 정보 다운로드</description>
    <description lang="pt">Descarregar informação de filmes de www.mymovies.it</description>
    <platform>all</platform>
  </extension>
</addon>
